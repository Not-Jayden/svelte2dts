{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "types": ["node"],
    "strict": true,
    "outDir": "./_build_",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "rootDir": "./",
    "composite": true,
    //"baseUrl": "src",
  },
  // Used by eslint
  "include": ["./*.js","./.*.js"],
  "exclude": ["src","test"]
}